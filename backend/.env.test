# Test Environment Configuration
NODE_ENV=test
PORT=5001

# MongoDB Test Database
MONGODB_URI=mongodb://localhost:27017/ai-resume-screener-test

# JWT Configuration (Same as dev for consistency)
JWT_SECRET=your-test-jwt-secret-key-change-in-production
JWT_EXPIRE=7d

# Redis (Optional for tests - will use memory cache fallback)
REDIS_HOST=localhost
REDIS_PORT=6379
